<% if bill.active_payments.length > 0 %>
  <table class="table">
    <thead>
      <tr><th colspan="3">Previous Payments</th></tr>
      <tr>
        <th>Amount</th>
        <th colspan="2">Payment Date</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: 'bill_payments/payment', collection: bill.active_payments.order(:active), as: :payment %>
    </tbody>
  </table>
<% end %>
