<% if @bill.cents %>
  <% bill_dollars = @bill.cents/100 %>
  <% bill_cents = @bill.cents%100 %>
<% else %>
  <% bill_dollars = 0 %>
  <% bill_cents = 0 %>
<% end %>
<% apartment = @bill.apartment_id || @apartment_id %>

<%= form_for(@bill) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>
      <ul>
        <% @bill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table>
    <tbody>
      <tr>
        <td><%= f.label :apartment_id, 'Apartment' %></td>
        <td><%= f.select :apartment_id, options_for_select(Apartment.select_options, apartment) %></td>
      </tr>
      <tr>
        <td><%= f.label :name, 'Name' %></td>
        <td><%= f.text_field :name, placeholder: "e.g. 'Rent'" %></td>
      </tr>
      <tr>
        <td><%= f.label :user_id, 'Payer' %></td>
        <td><%= f.select :user_id, User.select_options %></td>
      </tr>
      <tr>
        <td><%= f.label :dollars, 'Amount'%></td>
        <td>
          $ <%= f.number_field :dollars, value: bill_dollars, min: 0 %> . <%= f.number_field :cents, value: bill_cents, min: 0, max: 99 %>
        </td>
      </tr>
      <tr>
        <td><label>Split</label></td>
        <td><span id="set-even">Even</span> | <span id="set-special" class="fake-link">Special</span><div id="special-split"></div></td>
      </tr>
      <tr>
        <td><%= f.label :due, 'Due Date' %></td>
        <td><%= f.date_select :due, order: [:month, :day, :year] %></td>
      </tr>
      <tr>
        <td><%= f.submit %></td>
        <td><%= link_to 'Cancel', request.referrer %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(document).ready(function(){
    $(document).on('click', '#set-special.fake-link', function(){
      $(this).removeClass('fake-link')
      $("#set-even").addClass('fake-link')
      generate_split_options()
    })

    $(document).on('click', '#set-even.fake-link', function(){
      $(this).removeClass('fake-link')
      $("#set-special").addClass('fake-link')
      $("#special-split").empty()
    })
  })

  function generate_split_options(){
    $.ajax({
      type: "GET",
      url: "/bills/get_split_users",
      data: {
        apartment_id: $("#bill_apartment_id option:selected").val()
      },
      success: function(data){
        set_user_options(data)
      }
    })
  }

  function set_user_options(users){
    var splitTable = $("<table><tbody></tbody></table>")
    users.forEach(function(user, index){
      var userSplit = $("<tr></tr>")
      var userName = "<td>" + user['first_name'] + ' ' + user['last_name'] + "</td>"
      userSplit.append(userName)
      var userDollars = '<td><input min="0" type="number" class="user_split" name="user_dollars_split_' + user['id'] + '" data-lock="' + user['id'] + '">.'
      var userCents = '<input min="0" max="99" type="number" class="user_split" name="user_cents_split_' + user['id'] + '" data-lock="' + user['id'] + '"></td>'
      userSplit.append(userDollars + userCents)
      var userLock = '<td><input type="checkbox" data-lock="' + user['id'] + '">Lock</td>'
      userSplit.append(userLock)
      splitTable.append(userSplit)
    })
    $("#special-split").append(splitTable)
  }

</script>
