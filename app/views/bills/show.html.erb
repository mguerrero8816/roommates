<table>
  <tbody>
    <tr>
      <td>Bill:</td>
      <td><%= @bill.name %></td>
    </tr>
    <tr>
      <td>Amount:</td>
      <td><%= "$#{@bill.cents/100}.#{@bill.cents%100}" %></td>
    </tr>
    <tr>
      <td>Owner:</td>
      <td><%= @bill.user.full_name %></td>
    </tr>
    <tr>
      <td>Apartment:</td>
      <td><%= @bill.apartment.name %></td>
    </tr>
    <tr>
      <td>Due Date:</td>
      <td><%= @bill.due.strftime('%m-%d-%Y') %></td>
    </tr>
    <tr>
      <td>Paid:</td>
      <td>
        <% if @bill.paid %>
          <%= @bill.paid %>
        <% elsif @bill.user_id == current_user.id %>
          <%= link_to 'Pay', new_payment_path(debt_id: @bill.id) %>
        <% else %>
          Unpaid
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to 'Edit', edit_bill_path(@bill) unless @bill.paid %>
