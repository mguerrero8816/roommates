<% total_paid = @bill.total_paid %>
<% paid_off = total_paid == @bill.cents %>
<table>
  <tbody>
    <tr>
      <td>Bill:</td>
      <td><%= @bill.name %></td>
    </tr>
    <tr>
      <td>Amount:</td>
      <td><%= cents_to_dollars(@bill.cents) %></td>
    </tr>
    <tr>
      <td>Owner:</td>
      <td><%= @bill.user.full_name %></td>
    </tr>
    <tr>
      <td>Apartment:</td>
      <td><%= @bill.apartment.name %></td>
    </tr>
    <tr>
      <td>Due Date:</td>
      <td><%= @bill.due.strftime('%m-%d-%Y') %></td>
    </tr>
    <tr>
      <td>Paid:</td>
      <td>
        <%= cents_to_dollars(total_paid) unless paid_off %>
        <%= 'Paid' if paid_off %>
        <%= link_to 'Pay', new_payment_path(debt_id: @bill.id) if @bill.user_id == current_user.id && !paid_off %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to 'Edit', edit_bill_path(@bill) unless paid_off %>
