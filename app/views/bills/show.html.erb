<%= form_tag pay_bill_bill_path(bill_id: @bill.id) do %>
  <table>
    <tbody>
      <tr>
        <td>Bill:</td>
        <td><%= @bill.name %></td>
      </tr>
      <tr>
        <td>Amount:</td>
        <td><%= "$#{@bill.cents/100}.#{@bill.cents%100}" %></td>
      </tr>
      <tr>
        <td>Owner:</td>
        <td><%= @bill.user.full_name %></td>
      </tr>
      <tr>
        <td>Apartment:</td>
        <td><%= @bill.apartment.name %></td>
      </tr>
      <tr>
        <td>Due Date:</td>
        <td><%= @bill.due.strftime('%M-%d-%Y') %></td>
      </tr>
      <tr>
        <td>Paid:</td>
        <td>
          <% if @bill.paid %>
            <%= @bill.paid %>
          <% elsif @bill.user_id == current_user.id %>
            <%= submit_tag('Pay Bill', data: { confirm: 'Pay Now?' } )%>
          <% else %>
            Unpaid
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
