<%= form_for(@bill) do |f| %>
  <table>
    <thead>
    </thead>
    <tbody>
      <tr>
        <td><%= f.label :name, 'Name' %></td>
        <td><%= f.text_field :name, placeholder: "e.g. 'Rent'" %></td>
      </tr>
      <tr>
        <td><%= f.label :user_id, 'Owner' %></td>
        <td><%= f.select :user_id, User.select_options %></td>
      </tr>
      <tr>
        <td><%= f.label :dollars, 'Amount'%></td>
        <td>
          $ <%= f.number_field :dollars %> . <%= f.select :cents, options_for_select((0..99).map{|i| [(i < 10 ? '0' << i.to_s : i), i]}, 0) %>
        </td>
      </tr>
      <tr>
        <td><%= f.label :due, 'Due Date' %></td>
        <td><%= f.date_select :due, order: [:month, :day, :year] %></td>
      </tr>
      <tr>
        <td><%= f.label :paid, 'Paid' %></td>
        <td>
          <%= f.check_box :confirm_pay %>
          <%= f.date_select :paid, order: [:month, :day, :year], disabled: true %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

<script type="text/javascript" language="javascript">
  $(document).ready(function(){
    $("#bill_confirm_pay").change(function(){
      if ($(this).is(":checked")){
        $("#bill_paid_1i").removeAttr("disabled")
        $("#bill_paid_2i").removeAttr("disabled")
        $("#bill_paid_3i").removeAttr("disabled")
      } else {
        $("#bill_paid_1i").attr('disabled', 'disabled')
        $("#bill_paid_2i").attr('disabled', 'disabled')
        $("#bill_paid_3i").attr('disabled', 'disabled')
      }
    })
  })
</script>
